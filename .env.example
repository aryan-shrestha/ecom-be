# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ecom_auth

# JWT Configuration
JWT_ISSUER=ecom-auth-service
JWT_AUDIENCE=ecom-api
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_TTL_MINUTES=10
JWT_ACTIVE_KID=key-2024-01

# JWT Keys (RS256) - In production, use files or secrets manager
# Generate with: ssh-keygen -t rsa -b 2048 -m PEM -f jwtRS256.key
JWT_PRIVATE_KEY_PATH=keys/jwtRS256.key
JWT_PUBLIC_KEY_PATH=keys/jwtRS256.key.pub
# OR provide PEM strings directly:
# JWT_PRIVATE_KEY_PEM=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----
# JWT_PUBLIC_KEY_PEM=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----

# Refresh Token Configuration
REFRESH_TOKEN_TTL_DAYS=14
REFRESH_TOKEN_HMAC_SECRET=replace-with-secure-random-secret-min-32-chars

# Cookie Settings
COOKIE_SECURE=false  # Set to true in production (HTTPS only)
COOKIE_DOMAIN=localhost

# Rate Limiting (in-memory, per instance)
RATE_LIMIT_LOGIN_MAX_REQUESTS=5
RATE_LIMIT_LOGIN_WINDOW_SECONDS=60
RATE_LIMIT_REFRESH_MAX_REQUESTS=10
RATE_LIMIT_REFRESH_WINDOW_SECONDS=60

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Application
DEBUG=true
LOG_LEVEL=INFO


CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_FOLDER_PREFIX=ecom/prod
MAX_IMAGE_BYTES=10485760  # 10MB
ALLOWED_IMAGE_MIME_TYPES=["image/jpeg","image/png","image/webp"]